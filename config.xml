<?xml version='1.0' encoding='utf-8'?>
<widget id="com.comunidadfusa.app" version="1.2.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fusa</name>
    <description>
        La aplicación Android de Comunidad Fusa. En Comunidad Fusa vas a conocer a tu próxima banda favorita.
    </description>
    <author email="info@comunidadfusa.com" href="http://www.comunidadfusa.com">
        Comunidad Fusa
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon qualifier="ldpi" src="res/android/icon/ldpi.png" />
        <icon qualifier="mdpi" src="res/android/icon/mdpi.png" />
        <icon qualifier="hdpi" src="res/android/icon/hdpi.png" />
        <icon qualifier="xhdpi" src="res/android/icon/xhdpi.png" />
        <splash qualifier="port-ldpi" src="res/android/splash/port-ldpi.png" />
        <splash qualifier="port-mdpi" src="res/android/splash/port-mdpi.png" />
        <splash qualifier="port-hdpi" src="res/android/splash/port-hdpi.png" />
        <splash qualifier="port-xhdpi" src="res/android/splash/port-xhdpi.png" />
    </platform>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
    <plugin name="cordova-plugin-music-controls"/>
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova.plugins.diagnostic" spec="^3.6.2" />
</widget>
